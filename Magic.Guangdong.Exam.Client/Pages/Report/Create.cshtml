@model Magic.Guangdong.Exam.Client.Pages.Report.CreateModel
@{
}
<style>
    .upload-preview-container {
        position: relative;
        width: 100%; /* 或任何你喜欢的宽度 */
        height: 100%; /* 或任何你喜欢的高度 */
        overflow: hidden;
        cursor: pointer;
        text-align:center;
    }

    #preview-image {
        width: auto;
        height: 300px; /* 或任何你喜欢的高度 */
        max-height: 419px;
