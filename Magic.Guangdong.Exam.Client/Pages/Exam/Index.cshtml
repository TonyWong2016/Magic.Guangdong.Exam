<script>
    //测试用
    setTimeout(() => {
        jValSet('idNumber', '456817132301152DAAI6')
        getReportInfo()
    },200)

    $('#AnswerCard').show();

    let examId = '@Model._examId';
    let groupCode = '@Model._groupCode';

    let reportId = 0;
    let idNumber = '';
    let queryModel = {};

    function getMyExams() {
        axios.get('@Url.Action("GetReportExamsForClient","ExamClient")', { params: {
                examId: examId,
                groupCode: groupCode,
                accountId: accountId
        }})
            .then(data => {
                let json = data.data;
                if(json.data && json.data.length>0){
                    renderTpl("examTpl", "exam", json.data, examId == '');
                    jValSet("info", convertDateFormat(json.data[0].startTime)+' - '+convertDateFormat(json.data[0].endTime))
                    reportId = json.data[0].reportId
                }else{
                    TT.error('无可选的考试');
                }
            })
       
        
    }

    getMyExams();

    autoSearch('idNumber', () => {
        getReportInfo()
    })

    $('#exam').on('change', v => {
        var span = $("#exam").find('option:selected').data('span')
        jValSet("info", span);
        examId = $("#exam").val();
        reportId = $("#exam").find('option:selected').data('reportid')
        if (span && jVal('idNumber')) {
            getReportInfo()
        }
    })
    //格式验证
    function formatVerification() {
        idNumber = jVal('idNumber');
        //idNumberType = 'idCard';
        let result = SFID(idNumber);
        if (!idNumber) return;
        if (idNumber.length == 18 && result != 'OK') {
            $('#CreateMyExam').html(result);
            $('#idNumber').attr('aria-invalid', true)
            return false;
        }
        if (idNumber.length == 18 && result == 'OK') {
            //idNumberType = 'idCard';
            $('#CreateMyExam').html(result);
            $('#idNumber').attr('aria-invalid', false)
            $('#CreateMyExam').html('身份证号码核验中...').attr('aria-busy', true);
            queryModel.IdCard = idNumber;
            queryModel.reportNumber = '';
            return true;
        }
        if (idNumber.length > 18) {
            //idNumberType = 'reportNumber';
            $('#idNumber').attr('aria-invalid', false);
            $('#CreateMyExam').html('准考证号核验中...').attr('aria-busy', true);
            queryModel.IdCard = '';
            queryModel.reportNumber = idNumber;
            return true;
        }
        $('#CreateMyExam').html('请输入规范的身份证号码或者准考证号');
        $('#idNumber').attr('aria-invalid', true)
        return false;
    }

    //身份验证
    function getReportInfo() {
        $('#CreateMyExam').removeAttr('aria-busy')
        if (!formatVerification()) {
            return;
        }
        queryModel.examId = examId;
        queryModel.reportId = reportId;
        axios.get('@Url.Action("InfoVerificationAuto", "ExamClient")',
            {
                params:
                    queryModel
            })
            .then(data => {
                $('#CreateMyExam').removeAttr('aria-busy')
                let json = data.data;
                if (json.code == 0) {
                    let item = $("#exam").find('option:selected');
                    jHtmlSet('name', item.data('name'));
                    jHtmlSet('examTitle', item.text());
                    jHtmlSet('idCard', item.data('idcard'));
                    jHtmlSet('reportNumber', item.data('reportnumber'));
                    jHtmlSet('email', item.data('email'));
                    $('#CreateMyExam').hide();
                    $('#ConfirmExam').show();
                    if (item.data('examtype') == '0') {
                        $('.attention').addClass('flashing-element').show()
                    }
                    return;
                }
                if (json.code == 1) {
                    $('#CreateMyExam').html(json.msg+"，即将跳转到考试界面");
                    setTimeout(() => {
                        location.href = `/exam/paper?urid=${json.data}`
                    },2000)
                    return;
                }

                TT.error(json.msg);
                $('#CreateMyExam').html(json.msg);
                $('#idNumber').attr('aria-invalid', true)
                return;
                
            })
    }
    
    
    //抽卷去答题
    async function ConfirmMyPaper(){
        $("#btnConfirm").hide();
        $("#btnConfirm2").show();
        let formData = new FormData();
        formData.append('__RequestVerificationToken', requestToken);
        formData.append('examId', examId);
        formData.append('reportId', reportId);
        
        let ret = await request('POST', '/examclient/ConfirmMyPaper', formData, CT);
        let json = ret.data;
        if (json.code == 1 && json.data) {
            TT.warning(json.msg);
            json.data.complated == 1 ? location.href = `/exam/result?urid=${json.data.id}` : location.href = `/exam/paper?urid=${json.data.id}&pid=${json.data.paperId}`;
            return;
        }
        if (json.code == 0) {
            location.href = `/exam/paper?urid=${json.data.id}&pid=${json.data.paperId}`
            return;
        }
        TT.error(json.msg);
        $("#btnConfirm").show();
        $("#btnConfirm2").hide();
    }
</script>
